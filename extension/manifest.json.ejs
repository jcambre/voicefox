{
  "manifest_version": 2,
  "name": "Voice Fox",
  "version": <%= package_json.version %>,
  "description": "Voice control the web",
  "developer": {
    "name": "Emerging Technologies Advanced Dev Team",
    "url": "https://github.com/mozilla/voicefill"
  },
  "icons": {
    "48": "assets/images/icon-48.png",
    "96": "assets/images/icon-96.png"
  },
  "applications": {
    "gecko": {
      "id": "firefox-voice@mozilla.org"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://jcambre.github.io/vf/*"
      ],
      "js": [
        //"js/vendor/browser-polyfill.min.js",
        "js/vendor/lottie.min.js",
        "js/content.js",
        "js/vendor/webrtc_vad.js",
        "js/intentParser.js"
      ],
      "css": [
        "css/main.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      //"js/vendor/browser-polyfill.min.js",
      "js/background.js",
      "js/browserService.js",
      "js/intentParser.js",
      "js/vendor/fuse.js"
      // TODO: generate a list of all the intents during a build process
    ]
  },
  "options_ui": {
    "page": "views/options.html"
  },
  "web_accessible_resources": [
    "views/CHANGELOG.html",
    "js/languages.json",
    "assets/animations/Done.json",
    "assets/animations/Error.json",
    "assets/animations/Start.json",
    "assets/animations/Spinning.json",
    "assets/images/icon-close.svg",
    "assets/images/icon-mic.svg",
    "assets/images/icon-redo.svg",
    "assets/images/icon-done.svg",
    "assets/images/icon-done-rtl.svg",
    "assets/images/ff-logo.png",
    "assets/images/feedback.svg",
    "assets/images/googleAssistant_logo.svg",
    "assets/images/alexa_logo.svg",
    "js/vendor/webrtc_vad.wasm"
  ],
  "permissions": [
    "<all_urls>",
    "storage",
    "find",
    "tabs",
    "nativeMessaging"
  ],
  "browser_action": {
    "browser_style": false,
    "default_title": "Voice Fill",
    "default_icon": "assets/images/mic.svg",
    "default_popup": "popup/popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Command+Period",
        "windows": "Ctrl+Period",
        "linux": "Ctrl+Period"
      },
      "description": "Opens Voice Fill by sending a 'listen' event"
    }
  },
  "omnibox": {
    "keyword": "vf"
  }
}
